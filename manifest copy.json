{
  "name": "Staleks helper",
  "description": "Staleks site helper",
  "version": "1.0",
  "author": "Solod Serbey",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "icons/32.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardRead",
    "tabs",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "copy-product-title": {
      "suggested_key": {
        "default": "Ctrl+Up",
        "mac": "Command+Up"
      },
      "description": "Copy product title"
    },
    "copy-product-id": {
      "suggested_key": {
        "default": "Ctrl+Down",
        "mac": "Command+Down"
      },
      "description": "Copy product id"
    },
    "search-input": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Searching input on staleks"
    },
    "copy-product-description": {
      "suggested_key": {
        "default": "Ctrl+Right",
        "mac": "Command+Right"
      },
      "description": "Copy product description"
    }
  }
}
